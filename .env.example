# Supabase Configuration
# Obtenha essas informações no painel do Supabase (Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role (apenas para operações administrativas)
# CUIDADO: Não exponha esta chave no frontend!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Environment
NODE_ENV=production
VITE_USE_LOCAL_API=false

# Firecrawl API (se estiver usando)
FIRECRAWL_API_KEY=your-firecrawl-api-key

# Domínios permitidos para CORS (separados por vírgula)
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://your-custom-domain.com

# Analytics e Tracking
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Configurações de Quiz
NEXT_PUBLIC_MAX_QUIZ_QUESTIONS=50
NEXT_PUBLIC_DEFAULT_QUIZ_TIMEOUT=300000

# Configurações de Upload (se aplicável)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880

# Debug (apenas para desenvolvimento)
NEXT_PUBLIC_DEBUG_MODE=false

# Webhook URLs (se aplicável)
WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration
CACHE_TTL=3600

# Email Configuration (se aplicável)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configurações de Segurança
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Configurações de Domínio Personalizado
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Configurações de Teste
NEXT_PUBLIC_TEST_MODE=false

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily

# Configurações de Monitoramento
MONITORING_ENABLED=true
ERROR_REPORTING_ENABLED=true